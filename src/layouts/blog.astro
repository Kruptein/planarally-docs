---
import dayjs from "dayjs";
import Main from "./main.astro";

const { title, author, date } = Astro.props.content;
const { headings } = Astro.props;
const formattedDate = dayjs(date, "YYYY-MM-DD HH:MM:SS").format('D MMMM YYYY')
---

<Main>
    <aside>
        {headings.map(header => {
            return (<a href={'#' + header.slug} class={'depth-' + header.depth}>{header.text}</a>)
        })}
    </aside>
    <div id="container">
        <main>
            <h1 id="title">{title}</h1>
            <p id="author">Posted {formattedDate} by {author}</p>
            <slot />
        </main>
    </div>
</Main>

<style lang="scss">
    $header-height: 90px;
    $sidebar-width: 18.75rem;

    #container {
        display: flex;
        justify-content: center;
    }

    aside {
        position: fixed;
        top: $header-height;
        bottom: 0;
        visibility: hidden;

        display: flex;
        flex-direction: column;

        width: $sidebar-width;
        padding-left: 2rem;

        border-right: solid 1px rgb(226, 236, 236);

        overflow-y: auto;
        overflow-x: hidden;

        @media (min-width: 960px) {
            visibility: visible;
        }

        > a {
            padding: 3px 0;
        }

        .depth-1, .depth-2 {
            border-top: solid 1px rgb(226, 236, 236);
            margin-top: 10px;
            padding-top: 10px;
            font-weight: bold;

            &:first-of-type {
                border-top: 0;
            }
        }

        .depth-4 {
            text-indent: 1rem;
        }
    }

    main {
        margin-left: 0;
        padding: 50px 100px;

        @media (min-width: 960px) {
            margin-left: $sidebar-width;
        }

        @media (min-width: 1280px) {
            max-width: 1000px;
        }

        #title, #author {
            text-align:center;
        }

        #author {
            font-size: small;
        }

        :global(h1),
        :global(p),
        :global(ul),
        :global(ol) {
            margin-bottom: 1.5rem;
        }

        :global(img) {
            height: auto;
            max-width: 100%;
            object-fit: contain;
            margin-bottom: 1rem;
        }

        :global(pre) {
            padding: 1rem;
            max-width: 680px;
            margin-bottom: 1rem;
        }

        :global(h2),
        :global(h3),
        :global(h4),
        :global(h5),
        :global(h6) {
            margin-bottom: 1.5rem;
            scroll-margin-top: 135px;
            position: relative;
            left: -30px;

            > :global(a[aria-hidden=true]) {
                visibility: hidden;
                padding-right: 20px;
                color: green
            }

            &:hover {                
                > :global(a[aria-hidden=true]) {
                    visibility: visible;
                }
            }
        }
    }
</style>
